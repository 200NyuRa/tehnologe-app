.header {
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100px
	border-bottom: 1px dashed $bgColorLight
	background: alpha($bgColor, 15%)
	z-index: 1

	@media $smallTablet {
		border-bottom none

		&:after {
			content: ''
			position: absolute
			display: block
			width: 100%
			height: 100%
			top: 0
			left: 0
			background: $bgColor
			z-index: -1
		}
	}

	@media $smallTablet {
		height: 64px
		background: $bgColor
	}

	&__container {
		@extend .container
		height: 100%
	}

	&__inner {
		height: 100%
		margin: 0 -15px
		display: flex
		justify-content: space-between
		align-items: center

		@media $desktop {
			margin: 0 -10px
		}
	}

	&__nav {
		@media $smallTablet {
			z-index: -1
			opacity: 0
		}
	}

	&__block {
		display: flex
		align-items: center
		flex-shrink: 0
		padding: 0 15px

		@media $desktop {
			padding: 0 10px
		}
	}

	&__menu-btn {
		display: none

		@media $smallTablet {
			display: block
			padding-right: 10px
		}
	}

	&__logo {
		display: flex
		icon-logo('after')
		color: $extraColor
		line-height: 1
		width: 120px
		font-size: 40px
		margin-right: 10px

		@media $smallTablet {
			font-size: 26px
			padding-top: 15px
			width: 80px
		}

		&:after {
			position: relative
			top: -0.6em
			left: -.2em
		}
	}

	&__log-in {
		position: relative
		color: alpha($textColor, 80%)
		padding: 5px
		font-size: 14px
		padding-right: 20px
		icon-user('after')

		&:after {
			position: absolute
			right: 0
			top: 50%
			margin-top: -12px
			color: $textColor
		}

		&:before {
			content: ''
			display: block
			position: absolute
			height: 1px
			left: 5px
			right: 20px
			bottom: 5px
			background: alpha($textColor, 0.5)
			transform: scale(0)
			transition: transform $duration

			@media $smallTablet {
				display: none
			}
		}

		&:hover:before {
			transform: scale(1)
		}
	}

	&_open-menu {

		& .header__line_1 {
			transform translateY(9px) rotate(-45deg)
		}

		& .header__line_2 {
			opacity 0
			transition opacity ($duration/2)
		}

		& .header__line_3 {
			transform translateY(-9px) rotate(45deg)
		}

		& .nav__inner {
			transform translateY(0)
		}

		& .header__nav {
			visibility visible
			opacity: 1
		}
	}
}