.text {
	p {
		text-transform: uppercase
		font-weight: bold
		margin-bottom 1.1em
		line-height 1.4
	}

	h1 {
		margin-bottom: .7em
		font-size 48px
		text-transform: uppercase
		font-weight bold
		line-height 1.4
		color: $extraColor

		@media $smallTablet {
			margin-top 2em
			font-size: 36px
		}
	}


	h1:first-child {
		margin-top 0
	}

	p:last-child,
	h1:last-child {
		margin-bottom 0
	}

	ul {
		width 80%
		li {
			padding-left 22px
			position relative
			margin-bottom 10px
			&:before-c {
				display block
				size 6px
				background $extraColor
				position absolute
				top 7px
				left 0
			}
		}
	}

}